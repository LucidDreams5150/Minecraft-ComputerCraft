os.loadAPI("repo/util/touchpoint")

local buttonGrid = touchpoint.new("right")


buttonGrid:add("label1",nil,1,5,12,8)
buttonGrid:add("label5",nil,1,10,12,13)
buttonGrid:add("label9",nil,1,15,12,18)

buttonGrid:add("label2",nil,16,5,27,8)
buttonGrid:add("label6",nil,16,10,27,13)
buttonGrid:add("label10",nil,16,15,27,18)

buttonGrid:add("label3",nil,31,5,42,8)
buttonGrid:add("label7",nil,31,10,42,13)
buttonGrid:add("label11",nil,31,15,42,18)
 --
buttonGrid:add("label4",nil,46,5,57,8)
buttonGrid:add("label8",nil,46,10,57,13)
buttonGrid:add("label12",nil,46,15,57,18)


buttonGrid:draw()



while true do
    os.pullEvent()
    local event, p1 = os.pullEvent()

    if event[1] == "button_click" then
        buttonGrid:handleEvents(p1)
    end
end